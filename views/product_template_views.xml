<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="onlife_product_template_only_form_view" model="ir.ui.view">
        <field name="name">onlife.product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="laboratorio_id"/>
                <field name="keywords"/>
            </field>
            <notebook position="inside">
                <page string="Campos personalizados">
                    <group>
                        <field name="campo_personalizado_ids" nolabel="1">
                            <tree string="Campos personalizados" editable="bottom">
                                <field name="campo_personalizado_id"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
