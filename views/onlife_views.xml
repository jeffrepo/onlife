<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="onlife_view_campo_personalizado_form" model="ir.ui.view">
        <field name="name">onlife.campo_personalizado.form</field>
        <field name="model">onlife.campo_personalizado</field>
        <field name="arch" type="xml">
            <form string="Campos personalizados">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="onlife_view_campo_personalizado_tree" model="ir.ui.view">
