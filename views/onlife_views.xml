        <field name="model">onlife.campo_personalizado</field>
        <field name="arch" type="xml">
           <tree string="Campos personalizados">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="act_onlife_campo_personalizado_view" model="ir.actions.act_window">
        <field name="name">Campos personalizados</field>
        <field name="res_model">onlife.campo_personalizado</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="onlife_view_campo_personalizado_tree"/>
    </record>

    <menuitem
        id="menu_act_onlife_campo_personalizado"
        name="Campos personalizados"
        action="act_onlife_campo_personalizado_view"
        parent="sale.product_menu_catalog"
        sequence="50"
        />

