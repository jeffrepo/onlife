<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_invoice2">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <div class="page">

                        <div style="position: absolute; top: 5.7cm; left: 15.6cm; font-size: 100%">
                            <span t-esc="o.invoice_date.day if o.invoice_date else ''"/>  /
                        </div>
                        <div style="position: absolute; top: 5.7cm; left: 16.6cm; font-size: 100%">
                            <span t-esc="o.invoice_date.month if o.invoice_date else ''"/>  /
                        </div>
                    <div style="position: absolute; top: 5.7cm; left: 17.6cm; font-size: 100%">
                            <span t-esc="o.invoice_date.year if o.invoice_date else ''"/>
                        </div>


                    <div style="position: absolute; top: 5.7cm; left: 3cm; font-size: 110%">
                        <span style="font-family: monospace!important" t-field="o.partner_id.name"/>
                    </div>

                    <div style="position: absolute; top: 7.5cm; left: 15cm; font-size: 110%">
                        <span t-field="o.partner_id.vat"/>
                    </div>
                    <div style="position: absolute; top: 6.7cm; left: 3.5cm; font-size: 80%; width: 9cm">
                        <span t-esc="o.partner_id.street"/>
                    </div>
                    <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 7.7cm; left: 3.5cm">
                        <span t-esc="o.partner_id.city"/>
                    </div>
                    <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 8.5cm; left: 4.5cm">
                        <span t-esc="o.partner_id.state_id.name if o.partner_id.state_id else ''"/>
                    </div>

                    <div style="position: absolute; top: 6.7cm; left: 15.6cm; font-size: 100%">
                    <span t-field="o.partner_id.numero_registro"/>
                    </div>

                    <div style="position: absolute; top: 8.5cm; left: 15cm; font-size: 100%">
                    <span t-field="o.partner_id.giro_negocio_id"/>
                    </div>
                    <div style="position: absolute; top: 9.3cm; left: 18cm; font-size: 100%; width: 8.5cm">
                        <span t-field="o.invoice_payment_term_id.name"/>
                    </div>
                    <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 9.3cm; left: 9.4cm">

                    </div>



                    <div style="position: absolute; top: 11.5cm; left: 2cm">
                        <table>
                            <tbody>
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td style="width: 4cm; font-size: 100%">
                                        <span t-field="l.quantity" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>

                                    <td style="width: 10.4cm; font-size: 100%">
                                        <span t-esc="producto(l.name)[0:51]"/>
                                    </td>
                                    <td style="width: 3.5cm; font-size: 100%;text-align: right">
                                        <span t-field="l.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td style="width: 3cm; font-size: 100%" class="text-right">
                                        <span t-esc="total_linea(l)" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>



                    <div style="position: absolute; top: 30.5cm; left: 23.7cm; font-size: 110%">
                        <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </div>
                    <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 27cm; left: 2.5cm; width: 20cm">
                        <span t-esc="a_letras.num_a_letras(o.amount_total)"/>
                    </div>
                    <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 27.5cm; left: 23.7cm">
                        <span t-field="o.amount_tax" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </div>
                    <div style="font-size: 90%; text-transform: uppercase; position: absolute; top: 28cm; left: 23.7cm">
                        <span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </div>


                    <div style="position: absolute; top: 28.5cm; left: 23.7cm; font-size: 90%">
                    <span t-esc="valor_retencion_iva(o)"/>
                    </div>

                     <div style="position: absolute; top: 29cm; left: 23.7cm; font-size: 90%">
                            <span t-esc="venta_total(o)" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </div>

                  </div>
              </div>
          </t>
      </t>
    </template>
</odoo>
